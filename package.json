{
  "name": "workspace-setting-changer",
  "displayName": "workspace-setting-changer",
  "description": "修改工作区setting",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "formatOnSaveSwitch",
        "title": "editor.formatOnSave 切换"
      },
      {
        "command": "workspace-setting-changer.helloWorld1",
        "title": "Hello World1（测试）"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "group": "2_workspace",
          "submenu": "settingChangeMenu"
        }
      ],
      "settingChangeMenu": [
        {
          "when": "isWindows",
          "command": "formatOnSaveSwitch"
        },
        {
          "when": "isWindows",
          "command": "workspace-setting-changer.helloWorld1"
        }
      ]
    },
    "submenus": [
      {
        "id": "settingChangeMenu",
        "label": "修改工作区配置"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.71.0",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "eslint": "^8.20.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.7.4",
    "@vscode/test-electron": "^2.1.5"
  }
}
